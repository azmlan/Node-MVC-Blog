<%- include('../partials/head.ejs')%>
<body>
  <%- include('../partials/nav.ejs')%>
  <div class="blogs content">
    <h2>جميع المقالات</h2>
    <% if (blogs.length> 0 ) { %>
      <% blogs.forEach(blog=>{ %>
        <a class ="single" href="/blogs/<%= blog._id%> ">
          <h2>
            <%= blog.title %>
          </h2>
          <p>
            <%= blog.snippet %>
          </p>
        </a>
        <% })%>
          <%}else{%>
            <p>There are no blogs to display...</p>
            <%}%>

  </div>
  
  <%- include('../partials/footer.ejs')%>
</body>
</html>